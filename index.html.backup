<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KPI99 - Redirecting...</title>
    <script>
        // Browser language detection and redirect
        (function() {
            // Get browser language
            const browserLang = navigator.language || navigator.userLanguage;
            const langCode = browserLang.toLowerCase().split('-')[0];
            
            // Check if user has a language preference stored
            const storedLang = localStorage.getItem('preferredLanguage');
            
            // Check URL path for language preference
            const pathLang = window.location.pathname.split('/')[1];
            
            // Determine target language
            let targetLang = 'en'; // Default to English
            
            if (pathLang === 'en' || pathLang === 'es') {
                targetLang = pathLang;
            } else if (storedLang === 'en' || storedLang === 'es') {
                targetLang = storedLang;
            } else if (langCode === 'es') {
                targetLang = 'es';
            }
            
            // Redirect to appropriate language version
            window.location.replace('/' + targetLang + '/');
        })();
    </script>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background: #f8fafc;
            color: #334155;
        }
        .loading {
            text-align: center;
        }
        .spinner {
            border: 3px solid #e2e8f0;
            border-top: 3px solid #3b82f6;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto 20px;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="loading">
        <div class="spinner"></div>
        <p>Redirecting...</p>
    </div>
</body>
</html>
